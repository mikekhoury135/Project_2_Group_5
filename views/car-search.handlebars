        </figure>
      </div>
      <div class="tile is-child is-1"></div>
      <div class="tile is-child is-9">
        <h2 class="title is-4">Volkswagen</h2>
        <p>Color: Green</p>
        <p>Year: 2021</p>
      </div>
    </div>
    <!-- placeholder for testing END -->

  </div>
</section>