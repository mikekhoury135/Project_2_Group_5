<!-- Search -->
<section id="search">
  <div class="field is-horizontal">
    <div class="field-body">

      <!-- search bar -->
      <div class="field">
        <div id="search-bar" class="field has-addons">
          <div class="control is-expanded has-icons-left">
            <input id="search-field" class="input is-rounded" type="search" placeholder="Search">
            <span class="icon is-small is-left">
              <i class="fas fa-search"></i>
            </span>
          </div>
          <!-- search bar submit -->
          <div class="control">
            <button id="search-btn" class="button is-link is-rounded">
              Search
            </button>
          </div>
        </div>
      </div>

      <!-- filter button activates modal -->
      <div class="field is-narrow">
        <div class="control has-icons-left is-narrow">
          <button id="filter-btn" class="button is-link is-rounded js-modal-trigger" data-target="modal-js-example">
            <span class="icon is-small is-left">
              <i class="fas fa-filter"></i>
            </span>
            Filter
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Code START -->
  <div id="modal-js-example" class="modal">
    <!-- dims rest of screen when modal active -->
    <div class="modal-background"></div>
    <div class="modal-content">
      <div class="box">

        <!-- filter search field -->
        <div class="field is-expanded">
          <div id="search-bar" class="field">
            <div class="control is-expanded has-icons-left">
              <input id="search-field" class="input is-rounded" type="search" placeholder="Search">
              <span class="icon is-small is-left">
                <i class="fas fa-search"></i>
              </span>
            </div>
          </div>
        </div>

        <!-- filter options -->
        <div id="filter-options">
          <div class="field-body">
            <!-- filter make field -->
            <div class="field is-narrow">
              <div class="control">
                <div class="select is-fullwidth">
                  <select>
                    <option selected="selected">Make</option>
                    <!-- placeholder for testing START -->
                    <option>Toyota</option>
                    <option>Ford</option>
                    <option>Honda</option>
                    <option>Volkswagen</option>
                    <!-- placeholder for testing END -->
                    {{!--
                    {{#each Make}}
                    <option>{{make_name}}</option>
                    {{/each}}
                    --}}
                  </select>
                </div>
              </div>
            </div>
            <!-- filter color field -->
            <div class="field is-narrow">
              <div class="control">
                <div class="select is-fullwidth">
                  <select>
                    <option selected="selected">Color</option>
                    <!-- placeholder for testing START -->
                    <option>Red</option>
                    <option>White</option>
                    <option>Black</option>
                    <option>Blue</option>
                    <!-- placeholder for testing END -->
                    {{!--
                    {{#each Color}}
                    <option>{{color_name}}</option>
                    {{/each}}
                    --}}
                  </select>
                </div>
              </div>
            </div>
            <!-- filter year field -->
            <div class="field is-narrow">
              <div class="control">
                <div class="select is-fullwidth">
                  <select id="year-dropdown">
                    <!-- dynamically creates placeholder year options -->
                    <option selected="selected">Year</option>
                    {{!--
                    {{#each Year}}
                    <option>{{make_year}}</option>
                    {{/each}}
                    --}}
                  </select>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- filter query submit -->
        <div class="field is-grouped is-grouped-right">
          <div class="control">
            <button id="filter-search-btn" class="button is-link is-rounded">
              Filter
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- close modal button -->
    <button class="modal-close is-large" aria-label="close"></button>
  </div>
  <!-- Modal Code END -->

  <div class="spacer"></div>

  <!-- Search Results displayed here -->
  <div class="tile is-12 is-vertical is-ancestor">
    <!-- I don't know what the actual code supposed to be -->
    {{!-- 
    {{#each searchResult}}
      {{> result-info searchResult}}
    {{/each}}
    --}}

    <!-- placeholder for testing START -->
    <div class="tile is-parent box">
      <div class="tile is-child">
        <figure class="image is-128x128">
          <img src="https://bulma.io/images/placeholders/128x128.png">
        </figure>
      </div>
      <div class="tile is-child is-1"></div>
      <div class="tile is-child is-9">
        <h2 class="title is-4">Toyota</h2>
        <p><strong>Color:</strong> Black</p>
        <p><strong>Year:</strong> 2008</p>
      </div>
    </div>

    <div class="tile is-parent box">
      <div class="tile is-child">
        <figure class="image is-128x128">
          <img src="https://bulma.io/images/placeholders/128x128.png">
        </figure>
      </div>
      <div class="tile is-child is-1"></div>
      <div class="tile is-child is-9">
        <h2 class="title is-4">Honda</h2>
        <p>Color: Red</p>
        <p>Year: 2002</p>
      </div>
    </div>

    <div class="tile is-parent box">
      <div class="tile is-child">
