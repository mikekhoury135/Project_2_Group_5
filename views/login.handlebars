<!-- login form -->
<form class="login-form column is-6 is-offset-3">
  <!-- login email -->
  <div class="field">
    <div class="control has-icons-left">
      <input id="email-login" class="input is-medium is-rounded" type="email" placeholder="Email">
      <span class="icon is-medium is-left">
        <i class="fas fa-envelope"></i>
      </span>
    </div>
  </div>
  <!-- login password -->
  <div class="field">
    <div class="control has-icons-left">
      <input id="password-login" class="input is-medium is-rounded" type="password" placeholder="Password">
      <span class="icon is-medium is-left">
        <i class="fas fa-lock"></i>
      </span>
    </div>
  </div>
  <!-- login submit -->
  <div class="field">
    <p class="control">
      <button type="submit" class="button is-success is-rounded">
        Login
      </button>
    </p>
  </div>
</form>

<!-- signup form -->
<form class="signup-form column is-6 is-offset-3">
  <!-- signup username -->
  <div class="field">
    <div class="control has-icons-left">
      <input id="username-signup" class="input is-medium is-rounded" type="text" placeholder="Username">
      <span class="icon is-medium is-left">
        <i class="fas fa-user"></i>
      </span>
    </div>
  </div>
  <!-- signup email -->
  <div class="field">
    <div class="control has-icons-left">
      <input id="email-signup" class="input is-medium is-rounded" type="email" placeholder="Email">
      <span class="icon is-medium is-left">
        <i class="fas fa-envelope"></i>
      </span>
    </div>
  </div>
  <!-- signup password -->
  <div class="field">
    <div class="control has-icons-left">
      <input id="password-signup" class="input is-medium is-rounded" type="password" placeholder="Password">
      <span class="icon is-medium is-left">
        <i class="fas fa-lock"></i>
      </span>
    </div>
  </div>
  <!-- signup submit -->
  <div class="field">
    <p class="control">
      <button type="submit" class="button is-success is-rounded">
        Signup
      </button>
    </p>
  </div>
</form>

